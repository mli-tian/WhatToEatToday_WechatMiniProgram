/* pages/user/index.wxss */
@import "../../wxss/index.wxss";
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.usermotto {
  margin-top: 200px;
}
.btn-blue {
  margin-top: 100px;
}
.footer-nav{
  margin: 30rpx 0 30rpx 0;
  text-align: center;
  font-size: 22rpx;
}
.footer-view{
  color: #0099FF;
  display: inline-block;
  padding-left: 10rpx;
} 
.footer-plus{
  color: gray;
  font-size: 20rpx;
  padding-top: 50rpx;
  margin-top: 50rpx
}
.the-weather {
  width: 100%;
  overflow: hidden;
}
.wea-thead {
  width: 100%;
  height: 400rpx;
  background: linear-gradient(to bottom, #9ad4f0, #fff);
  position: relative;
}
.wea-container {
  display: flex;
  width: 100%;
  padding: 40rpx 20rpx;
  text-align: center;
}
.wea-city {
  display: flex;
  flex-direction: column;
  width: 50%;
  text-align: center;
}
.wea-city .c-name {
  padding: 0 20rpx;
  color: #333;
  font-size: 40rpx;
  font-weight: 600;
}
.wea-city .c-temp {
  margin-top: 20rpx;
  overflow: hidden;
}
.temp-now {
  font-size: 80rpx;
}
.temp-state {
  font-size: 30rpx;
  color: cornflowerblue;
}
.wea-life {
  width: 50%;
  min-height: 20rpx;
  overflow: hidden;
  border-bottom: 1px solid #dff2fd;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.life-swiper {
  width: 100%;
  height: 240rpx;
  color: #666;
}
.life-swiper .li-item {
  width: 100%;
  height: 100%;
  line-height: 50rpx;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}